<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base -->
    <style name="myGithubIssues" />


    <!-- Texts -->
    <style name="allStarKtRepos.texts" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="allStarKtRepos.texts.mainScreenTitle" parent="allStarKtRepos.texts">
        <item name="android:textSize">@dimen/text_size_mxxlarge</item>
    </style>

    <style name="allStarKtRepos.texts.itemList" parent="allStarKtRepos.texts"/>
    <style name="allStarKtRepos.texts.itemList.Title" parent="allStarKtRepos.texts.itemList">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="allStarKtRepos.texts.itemList.Description" parent="allStarKtRepos.texts.itemList">
        <item name="android:textSize">@dimen/text_size_middle</item>
    </style>


    <!-- CardViews -->
    <style name="allStarKtRepos.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_middle</item>
        <item name="android:background">@color/cardViewBackground</item>
        <item name="cardBackgroundColor">@color/cardViewBackground</item>
        <item name="cardCornerRadius">@dimen/corner_radius_small</item>
        <item name="cardElevation">@dimen/elevation_2x</item>
    </style>
    <style name="allStarKtRepos.CardView.Issue" parent="allStarKtRepos.MaterialCardView" />

</resources>